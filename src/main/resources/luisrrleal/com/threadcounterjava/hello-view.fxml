<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.layout.VBox?>

<?import javafx.scene.control.Button?>
<VBox alignment="CENTER" spacing="20.0" xmlns:fx="http://javafx.com/fxml"
      fx:controller="luisrrleal.com.threadcounterjava.HelloController">
    <padding>
        <Insets bottom="20.0" left="20.0" right="20.0" top="20.0"/>
    </padding>

    <Label fx:id="title" text="COUNTER"/>
    <Button text="Start" onAction="#onStartButtonClick"/>

    <Label fx:id="counter1" text="0" style="-fx-font-size: 25px; -fx-text-fill: green"/>
    <Label fx:id="counter2" text="0"  style="-fx-font-size: 25px; -fx-text-fill: red"/>
    <Label fx:id="counter3" text="0"  style="-fx-font-size: 25px; -fx-text-fill: blue"/>
</VBox>
